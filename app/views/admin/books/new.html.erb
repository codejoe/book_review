
<% #([:admin, @book], html: {id: "form_book"}) in bisa update %>
<%= form_for(@book, url: admin_books_path, html: {id: "form_book", multipart: true}) do |f| %>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name, required: true %>
</div>
<div class="field">
  <%= f.label :author %><br />
  <%= f.text_field :author, required: true %>
</div>
<div class="field">
  <%= f.label :number_of_page %><br />
  <%= f.text_field :number_of_page, required: true %>
</div>
<div>
  <%= f.label Category %><br />
  <%= f.collection_select(:category, Category.all, :id, :name) %>
</div>
<div>
  <%= f.label :date_release %><br />
  <%= f.date_field :date_release %>
</div>
<div class="field">
  <%= f.label :description %><br />
  <%= f.text_area :description, required: true %>
</div>
<div>
  <%= f.label :photo %><br />
  <%= f.file_field :photo %>
</div>
<div class="actions">
  <br>
  <%= f.submit %>
</div>
<% end %> 