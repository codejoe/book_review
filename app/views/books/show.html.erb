<div id="wrap">
  <div id="main" class="container clear-top">

    <div id="topPan">
      <div class="logoImage">
        <%= image_tag "logo.png" %> 
      </div>
      <div class="logoTitle">
        Books Review
      </div>
      <div class="clearing">
        &nbsp;
      </div>
      <div class="navBar">
        <nav class="navbar navbar-default" role="navigation">
          <ul class="nav navbar-nav">
            <li class="active">
              <a href="#">Home</a>
            </li>
            <li>
              <a href="#">Book Release</a>
            </li>
            <li>
              <a href="#">Explore</a>
            </li>
          </ul>
        </nav>
      </div>
      <div class="sign-form">
        <% if user_signed_in? == false %>
        <%= form_for(@user, :as => :user, :url => session_path(:user)) do |f| %>
          <%#= devise_error_messages! %>
          Email: <%= f.email_field :email, :autofocus => true %>
          Password:<%= f.password_field :password %>
          <%= f.submit "Sign in" %>
        <% end %>
        Not a member? <!--<a href="#">Sign Up</a>-->
        <% end %>
        <% if user_signed_in? %>
          Logged in as <strong><%= current_user.email %></strong>.
          <%#= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
          <%= link_to "Administrator", admin_root_path if current_user.role == "admin"  %>
          <%= link_to "Reviewer", :class => 'navbar-link' if current_user.role == "reviewer"  %>
          |
          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
          <% else %>
          <%= link_to "Sign up,", new_user_registration_path, :class => 'navbar-link'  %>
          <%#= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
          <a href="#">Forgot Password?</a>
        <% end %>
      </div>
    </div>
    <div id="middlePan">
      <div style="display: block">
        <p>
          <div class="box">
            <%= image_tag @book.photo.url %>
          </div>
        </p>
        <p>
          <strong>Name:</strong>
          <%= @book.name %>
        </p>
        <p>
          <strong>Author:</strong>
          <%= @book.author %>
        </p>
        <p>
          <strong>Date Release:</strong>
          <%= @book.date_release %>
        </p>
        <p>
          <strong>Name:</strong>
          <%= @book.description %>
        </p>
        <div class="clearing"></div>
      </div>


      <% @book.comments.each do |comment| %>
          <p>
              <% if comment.user.nil? %>
              Anonymous
              <% else %>
              <%= comment.user.email %>
              <% end %>
              <small><%= comment.title %></small> <br/>
              <%= comment.comment %>
          </p>
          <hr/>
      <% end %>
      <% if user_signed_in? %>
        <%= form_for(@comment, url: book_comments_path(@book), html: {id: "form_comment"}) do |f| %>
          <% if @comment.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
              <ul>
              <% @comment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <div class="field">
            <%= f.label :comment %><br/>
            <%= f.text_area :comment, required: true %>
          </div>
          <div class="actions">
            <%= f.submit %>
          </div>
        <% end %>
      <% else %>
          <%= link_to "Sign up First To Give Comment", new_user_registration_path, :class => 'navbar-link'  %>
      <% end %>
    </div>
    
    <div id="bottomPan">
      <!-- #Bottom Pan -->
    </div>
    
  </div>
</div>
<div class="footer">
  <div class="container">
    <p>&copy; 2013. Akademi Rails.</p>
  </div>
</div>





